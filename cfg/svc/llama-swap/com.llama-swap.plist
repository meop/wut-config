<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "~//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>com.llama-swap</string>
  <key>ProgramArguments</key>
  <array>
    <string>/opt/homebrew/bin/llama-swap</string>
    <string>-config</string>
    <string>/Users/marshall/llm/llama-swap/config.yaml</string>
    <string>-listen</string>
    <string>:8080</string>
    <string>-watch-config</string>
  </array>

  <key>RunAtLoad</key>
  <true/>
  <key>KeepAlive</key>
  <true/>

  <key>StandardOutPath</key>
  <string>/tmp/llama-swap.stdout</string>
  <key>StandardErrorPath</key>
  <string>/tmp/llama-swap.stderr</string>
</dict>
</plist>
